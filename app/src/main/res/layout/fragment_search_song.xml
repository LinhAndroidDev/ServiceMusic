<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.FragmentSearchSong">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backSearch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/ic_back_thin" />

        <com.example.serviceandroid.custom.CustomSearchView
            android:id="@+id/searchSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow_top" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Đề xuất cho bạn"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="anh trai vượt ngàn chông gai"
                            android:typeface="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="vừa hận vừa yêu"
                            android:textStyle="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="trái tim lớn"
                            android:textStyle="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="bật nhạc đón hè"
                            android:textStyle="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp"
                            app:closeIcon="@drawable/ic_remove" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="tâm trạng ngày mưa"
                            android:textStyle="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="#zingchart"
                            android:textStyle="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="workout"
                            android:textStyle="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="hôm nay nghe gì"
                            android:textStyle="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_45_grey"
                            android:text="thư giãn"
                            android:textStyle="normal"
                            app:chipBackgroundColor="@color/grey_light"
                            app:chipCornerRadius="45dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="0dp" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/microSearch"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_micro_fill"
        app:iconSize="35dp"
        app:iconTint="@color/blue"
        app:elevation="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearance="@style/RoundShape" />

</RelativeLayout>