<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_white_boder_top_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/avatar"
                    android:src="@drawable/la_lung"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleSong"
                    android:text="Hay Đe Anh Yeu Em Them Lan Nua"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvNameSinger"
                    android:layout_marginTop="3dp"
                    android:text="The Men"
                    android:textSize="14sp"
                    android:textColor="@color/txt_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:src="@drawable/img_share"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>

        <View
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey_light"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_download_thin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Tải về"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addFavourite"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgFavourite"
                android:src="@drawable/ic_favourite_thin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:id="@+id/tvFavourite"
                android:layout_marginStart="20dp"
                android:text="Thêm vào thư viện"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/ic_playlist"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Thêm vào playlist"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_content_same"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Phát nội dụng tương tự"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_add_playlist"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Thêm vào danh sách phát"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_playlist_next"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Phát kế tiếp"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_ringtone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Cài nhạc chờ &amp; nhạc chuông"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_library_music"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Xem album"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_artist"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Xem nghệ sĩ"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="30dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_block"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/black"/>

            <TextView
                android:layout_marginStart="20dp"
                android:text="Chặn"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</layout>